{
  "cli": {
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "node": "23.4.0",
      "pnpm": "9.12.2",
      "ios": {
        "resourceClass": "m-medium"
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_ENV": "development"
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "env": {
        "APP_ENV": "preview",
        "BETTER_AUTH_URL": "https://dev.probablepitcher.com"
      }
    },
    "production": {
      "autoIncrement": true,
      "extends": "base",
      "env": {
        "APP_ENV": "production",
        "BETTER_AUTH_URL": "https://probablepitcher.com"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
