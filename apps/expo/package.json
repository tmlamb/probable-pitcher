{
  "name": "@probable/expo",
  "version": "2.0.1",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "clean": "git clean -xdf .cache .expo .turbo android ios node_modules",
    "dev": "BETTER_AUTH_URL= expo start --dev-client",
    "dev:android": "expo start --android",
    "dev:ios": "expo start --ios",
    "build:dev": "eas build --profile development --platform ios",
    "build:preview": "eas build --profile preview --platform ios",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path .prettierignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit",
    "expo:fix": "expo install --check"
  },
  "dependencies": {
    "@better-auth/expo": "catalog:",
    "@date-fns/tz": "1.4.0",
    "@probable/ui": "workspace:*",
    "@sentry/react-native": "7.2.0",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "@trpc/tanstack-react-query": "catalog:",
    "better-auth": "catalog:",
    "expo": "54.0.13",
    "expo-apple-authentication": "8.0.7",
    "expo-asset": "~12.0.9",
    "expo-constants": "~18.0.9",
    "expo-dev-client": "~6.0.15",
    "expo-device": "~8.0.9",
    "expo-image": "~3.0.9",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-localization": "17.0.7",
    "expo-notifications": "~0.32.12",
    "expo-router": "~6.0.12",
    "expo-secure-store": "15.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-updates": "~29.0.12",
    "expo-web-browser": "15.0.8",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "react-native": "~0.81.4",
    "react-native-css-interop": "~0.0.36",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.3",
    "react-native-safe-area-context": "~5.6.1",
    "react-native-screens": "~4.16.0",
    "superjson": "2.2.2",
    "twrnc": "4.6.1"
  },
  "devDependencies": {
    "@probable/api": "workspace:*",
    "@probable/eslint-config": "workspace:*",
    "@probable/prettier-config": "workspace:*",
    "@probable/tailwind-config": "workspace:*",
    "@probable/tsconfig": "workspace:*",
    "@types/react": "catalog:react19",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@probable/prettier-config",
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": false
      }
    }
  }
}
